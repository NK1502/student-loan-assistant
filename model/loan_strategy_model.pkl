import pickle
from sklearn.linear_model import LogisticRegression
from sklearn.datasets import make_classification

# Example: Train a simple model (replace with your actual training code)
X, y = make_classification(n_samples=100, n_features=4, n_classes=3, random_state=42)
model = LogisticRegression(max_iter=200)
model.fit(X, y)

# Save the trained model
with open('model/loan_strategy_model.pkl', 'wb') as model_file:
    pickle.dump(model, model_file)
